pipeline{
    agent any
    tools {nodejs "NodeJS"}
    stages {
        stage("Install"){
            steps{
                sh "npm install"
            }
        }
        stage("Build"){
            steps{
                sh "ng build"
            }
        }
        stage("Deploy"){
            steps{
                sh "mv dist/dannyApp/* /var/www/html"
            }
        }
    }
}
